<% layout('/layouts/boilearplate') -%>


<style>
  .filters{
    /* margin-top: 200px; */
    /* margin: 0; */
    border-radius: 20px;
    height: 100px;
    width: 100%;

    display: flex;
    align-items: center;
    overflow-x: auto;
    /* overflow-y: hidden; */
    white-space: nowrap; 

  }
  .filter{

height: 100%;
/* width: 150px; */
padding: 0 25px;
    /* border: 1px solid black; */
     font-size1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    cursor: pointer;
    opacity: 0.7;
    transition: all 0.2s ease-in-out;
  
  }
  .filter:hover{
    opacity: 1;

    border-bottom: 1px solid black;
}
  

 .filters::-webkit-scrollbar {
  height: 8px; 
  width: 8px; 
 }

.filters::-webkit-scrollbar-track {
  background-color: #f1f1f1;
  border-radius: 10px; 
}

.filters::-webkit-scrollbar-thumb {
  background-color: #888; 
  border-radius: 10px; 
}

.filters::-webkit-scrollbar-thumb:hover {
  background-color: #555; /* Thumb ka hover effect */
}

</style>


<div class="filters">
